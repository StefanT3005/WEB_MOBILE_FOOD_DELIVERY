<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MOBILE.Views.PlaceOrderPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Plaseaza Comanda">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">

            <Label Text="Plaseaza comanda" FontSize="24" />

            <Entry Placeholder="CustomerId" Keyboard="Numeric" Text="{Binding CustomerId}" />
            <Entry Placeholder="Delivery Address" Text="{Binding DeliveryAddress}" />
            <Entry Placeholder="Quantity" Keyboard="Numeric" Text="{Binding Quantity}" />
            <Button Text="Trimite comanda" Command="{Binding PlaceOrderCommand}" />


            <Label Text="{Binding ResultText}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
