<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MOBILE.Views.OrderStatusPage"
    Title="Status comanda">

    <VerticalStackLayout Padding="20" Spacing="12">
        <Label Text="Verifica status comanda" FontSize="20" />

        <Entry Placeholder="OrderId"
               Keyboard="Numeric"
               Text="{Binding OrderId}" />

        <Button Text="Verifica status"
                Command="{Binding CheckStatusCommand}" />

        <Label Text="{Binding StatusText}"
               IsVisible="{Binding HasResult}"
               FontSize="18" />
    </VerticalStackLayout>
</ContentPage>
