@page
@model WEB.Pages.Payments.IndexModel

@{
    ViewData["Title"] = "Plăți";
}

<div class="container-fluid pt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 fw-bold text-dark mb-1">Registru Plăți</h1>
            <p class="text-muted small"><i class="bi bi-shield-check me-1"></i> Evidența tranzacțiilor finalizate și metodele de încasare.</p>
        </div>
        <a asp-page="Create" class="btn btn-primary shadow-sm rounded-pill px-4">
            <i class="bi bi-plus-circle me-2"></i> Înregistrează Plată
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-3">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3 text-muted border-0">Comandă (Destinație)</th>
                            <th class="py-3 text-muted border-0">Metodă</th>
                            <th class="py-3 text-center text-muted border-0">Suma</th>
                            <th class="py-3 text-center text-muted border-0">Data Plății</th>
                            <th class="pe-4 py-3 text-end text-muted border-0">Acțiuni</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Payment)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="small text-dark fw-medium">
                                        <i class="bi bi-receipt me-2 text-secondary"></i>@Html.DisplayFor(modelItem => item.Order.DeliveryAddress)
                                    </div>
                                </td>
                                <td>
                                    @{
                                        var methodClass = item.Method.ToString().ToLower().Contains("card") ? "bg-info text-dark" : "bg-warning text-dark";
                                        var methodIcon = item.Method.ToString().ToLower().Contains("card") ? "bi-credit-card" : "bi-cash-stack";
                                    }
                                    <span class="badge @methodClass bg-opacity-10 border @(item.Method.ToString().ToLower().Contains("card") ? "border-info" : "border-warning") px-3 py-2">
                                        <i class="bi @methodIcon me-1"></i> @Html.DisplayFor(modelItem => item.Method)
                                    </span>
                                </td>
                                <td class="text-center">
                                    <span class="fw-bold text-success fs-6">@item.Amount.ToString("N2") RON</span>
                                </td>
                                <td class="text-center">
                                    <div class="text-muted small">
                                        <i class="bi bi-calendar3 me-1"></i> @item.PaidAt
                                    </div>
                                </td>
                                <td class="pe-4 text-end">
                                    <div class="btn-group shadow-sm" role="group">
                                        <a asp-page="./Edit" asp-route-id="@item.PaymentId" class="btn btn-sm btn-white border border-end-0 text-primary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-page="./Details" asp-route-id="@item.PaymentId" class="btn btn-sm btn-white border border-end-0 text-info" title="Details">
                                            <i class="bi bi-info-circle"></i>
                                        </a>
                                        <a asp-page="./Delete" asp-route-id="@item.PaymentId" class="btn btn-sm btn-white border text-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        border-radius: 12px;
    }

    .table thead th {
        font-size: 0.7rem;
        text-transform: uppercase;
        letter-spacing: 0.8px;
    }

    .btn-white {
        background-color: #fff;
    }

        .btn-white:hover {
            background-color: #f8f9fa;
        }
    /* Efect de "glow" pentru sume */
    .text-success {
        color: #198754 !important;
        text-shadow: 0 0 10px rgba(25, 135, 84, 0.1);
    }
</style>