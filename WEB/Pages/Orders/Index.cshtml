@page
@model WEB.Pages.Orders.IndexModel

@{
    ViewData["Title"] = "Orders";
}

<div class="container-fluid pt-4">
    <div class="d-flex justify-content-between align-items-end mb-4">
        <div>
            <h1 class="display-6 fw-bold text-dark mb-1">Orders History</h1>
        </div>
        <a asp-page="Create" class="btn btn-dark shadow rounded-3 px-4 py-2">
            <i class="bi bi-cart-plus me-2"></i> New Order
        </a>
    </div>

    <div class="card border-0 shadow-sm overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light border-bottom">
                        <tr>
                            <th class="ps-4 py-3">@Html.DisplayNameFor(model => model.Order[0].Customer)</th>
                            <th class="py-3">@Html.DisplayNameFor(model => model.Order[0].Restaurant)</th>
                            <th class="py-3">@Html.DisplayNameFor(model => model.Order[0].PlacedAt)</th>
                            <th class="py-3">@Html.DisplayNameFor(model => model.Order[0].DeliveryAddress)</th>
                            <th class="py-3 text-center">@Html.DisplayNameFor(model => model.Order[0].TotalAmount)</th>
                            <th class="py-3 text-center">@Html.DisplayNameFor(model => model.Order[0].Status)</th>
                            <th class="pe-4 py-3 text-end">Options</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Order)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary bg-opacity-10 text-primary p-2 rounded me-3">
                                            <i class="bi bi-person"></i>
                                        </div>
                                        <span class="fw-semibold">@Html.DisplayFor(modelItem => item.Customer.Email)</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="small">
                                        <i class="bi bi-shop me-1 text-muted"></i>
                                        @Html.DisplayFor(modelItem => item.Restaurant.AddressLine)
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex flex-column">
                                        <span class="fw-medium">@item.PlacedAt.ToString("dd MMM yyyy")</span>
                                        <span class="text-muted small">@item.PlacedAt.ToString("HH:mm")</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="text-secondary small">
                                        <i class="bi bi-truck me-1"></i> @Html.DisplayFor(modelItem => item.DeliveryAddress)
                                    </span>
                                </td>
                                <td class="text-center">
                                    <span class="fw-bold text-dark fs-5">@item.TotalAmount.ToString("N2") <small>RON</small></span>
                                </td>
                                <td class="text-center">
                                    <span class="badge rounded-pill
                                             @(item.Status == "InPregatire" ? "bg-warning text-dark" :
                                               item.Status == "InLivrare" ? "bg-info text-dark" :
                                               "bg-success")">
                                    @item.Status
                                </span>
                            </td>
                                <td class="pe-4 text-end">
                                    <div class="d-flex justify-content-end gap-1">
                                    <a asp-page="./Details" asp-route-id="@item.OrderId" class="btn btn-sm btn-outline-primary" title="Editează">
                                        Details
                                    </a>
                                    <a asp-page="./Edit" asp-route-id="@item.OrderId" class="btn btn-sm btn-outline-primary" title="Editează">
                                        Edit
                                    </a>
                                    <a asp-page="./Delete" asp-route-id="@item.OrderId" class="btn btn-sm btn-outline-primary" title="Editează">
                                        Delete
                                    </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f3f4f7;
    }
    /* Elimină liniile de tabel prea accentuate */
    .table td {
        border-bottom: 1px solid #f0f0f0;
        padding: 1rem 0.5rem;
    }
    /* Stil pentru header-ul tabelului */
    .table thead th {
        font-weight: 600;
        color: #6c757d;
        font-size: 0.8rem;
        text-transform: uppercase;
    }
    /* Efect subtil de ridicare la hover */
    .table-hover tbody tr:hover {
        background-color: #ffffff !important;
        box-shadow: inset 4px 0 0 #0d6efd; /* Linie albastră în stânga la hover */
    }
</style>