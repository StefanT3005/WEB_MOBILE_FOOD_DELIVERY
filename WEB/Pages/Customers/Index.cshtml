@page
@model WEB.Pages.Customers.IndexModel

@{
    ViewData["Title"] = "Clienți";
}

<div class="container-fluid pt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6 fw-bold text-secondary">Clients</h1>
        <a asp-page="Create" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-circle"></i> Add new Client
        </a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">@Html.DisplayNameFor(model => model.Customer[0].Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Customer[0].Email)</th>
                            <th>@Html.DisplayNameFor(model => model.Customer[0].Phone)</th>
                            <th>@Html.DisplayNameFor(model => model.Customer[0].City)</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Customer)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">@Html.DisplayFor(modelItem => item.Name)</td>
                                <td><span class="text-muted">@Html.DisplayFor(modelItem => item.Email)</span></td>
                                <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                                <td>
                                    <span class="badge rounded-pill bg-light text-dark border">
                                        @Html.DisplayFor(modelItem => item.City)
                                    </span>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group" role="group">
                                        <a asp-page="./Edit" asp-route-id="@item.CustomerId" class="btn btn-sm btn-outline-primary" title="Editează">
                                            Edit
                                        </a>
                                        <a asp-page="./Details" asp-route-id="@item.CustomerId" class="btn btn-sm btn-outline-info" title="Detalii">
                                            Details
                                        </a>
                                        <a asp-page="./Delete" asp-route-id="@item.CustomerId" class="btn btn-sm btn-outline-danger" title="Șterge">
                                            Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    /* Mic retuș pentru a face tabelul să arate mai modern */
    body {
        background-color: #f8f9fa; /* Fundal gri deschis pentru contrast */
    }
    .table thead th {
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-weight: 600;
        padding-top: 15px;
        padding-bottom: 15px;
    }
    .btn-group .btn {
        margin-left: 2px;
    }
</style>