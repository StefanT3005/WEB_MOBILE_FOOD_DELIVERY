@page
@model WEB.Pages.OrderItems.IndexModel

@{
    ViewData["Title"] = "Detalii Comenzi";
}

<div class="container-fluid pt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 fw-bold text-dark mb-1">Ordered Products</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Dashboard</a></li>
                    <li class="breadcrumb-item active">Order Items</li>
                </ol>
            </nav>
        </div>
        <a asp-page="Create" class="btn btn-primary shadow-sm rounded-pill px-4">
            <i class="bi bi-plus-lg me-2"></i> Add Item
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-3">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3 text-muted">@Html.DisplayNameFor(model => model.OrderItem[0].Order)</th>
                            <th class="py-3 text-muted">@Html.DisplayNameFor(model => model.OrderItem[0].MenuItem)</th>
                            <th class="py-3 text-center text-muted">@Html.DisplayNameFor(model => model.OrderItem[0].Quantity)</th>
                            <th class="py-3 text-center text-muted">Price</th>
                            <th class="py-3 text-center text-muted">Total</th>
                            <th class="pe-4 py-3 text-end text-muted">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderItem)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-info bg-opacity-10 text-info p-2 rounded-circle me-3">
                                            <i class="bi bi-geo-alt"></i>
                                        </div>
                                        <span class="small text-truncate" style="max-width: 200px;" title="@item.Order.DeliveryAddress">
                                            @item.Order.DeliveryAddress
                                        </span>
                                    </div>
                                </td>
                                <td>
                                    <span class="fw-bold text-dark">@Html.DisplayFor(modelItem => item.MenuItem.Name)</span>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-secondary rounded-pill">x @item.Quantity</span>
                                </td>
                                <td class="text-center fw-semibold text-muted">
                                    @item.UnitPrice.ToString("C2")
                                </td>
                                <td class="text-center fw-bold text-primary">
                                    @((item.Quantity * item.UnitPrice).ToString("C2"))
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group" role="group">
                                        <a asp-page="./Edit" asp-route-id="@item.OrderItemId" class="btn btn-sm btn-outline-primary" title="Editează">
                                            Edit
                                        </a>
                                        <a asp-page="./Details" asp-route-id="@item.OrderItemId" class="btn btn-sm btn-outline-info" title="Detalii">
                                            Details
                                        </a>
                                        <a asp-page="./Delete" asp-route-id="@item.OrderItemId" class="btn btn-sm btn-outline-danger" title="Șterge">
                                            Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fc;
        font-family: 'Inter', sans-serif;
    }

    .table thead th {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        border-bottom-width: 1px;
    }

    .table tbody tr {
        transition: all 0.2s;
    }
    /* Efect de umbră la hover pe rând */
    .table-hover tbody tr:hover {
        background-color: #f1f4f9;
        transform: scale(1.002);
    }

    .badge {
        font-weight: 500;
        padding: 0.5em 0.8em;
    }

    .btn-group .btn {
        margin-left: 2px;
    }
</style>