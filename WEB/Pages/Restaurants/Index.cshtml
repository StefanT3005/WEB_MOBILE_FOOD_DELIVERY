@page
@model WEB.Pages.Restaurants.IndexModel

@{
    ViewData["Title"] = "Restaurante";
}

<div class="container-fluid pt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 fw-bold text-dark mb-1">Locații Restaurante</h1>
            <p class="text-muted"><i class="bi bi-geo-alt-fill me-1"></i> Administrarea sediilor și a stării operaționale în timp real.</p>
        </div>
        @if (User.IsInRole("Admin"))
        {
            <a asp-page="Create" class="btn btn-primary shadow-sm rounded-pill px-4">
                <i class="bi bi-plus-circle me-2"></i> Adaugă Locație
            </a>
        }
    </div>

    <div class="card border-0 shadow-sm rounded-3">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light border-bottom">
                        <tr>
                            <th class="ps-4 py-3 text-muted text-uppercase small">Denumire</th>
                            <th class="py-3 text-muted text-uppercase small">Contact</th>
                            <th class="py-3 text-muted text-uppercase small">Adresă</th>
                            <th class="py-3 text-muted text-uppercase small text-center">Program</th>
                            <th class="pe-4 py-3 text-end text-muted text-uppercase small">Acțiuni</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Restaurant)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="fw-bold text-primary fs-6">@Html.DisplayFor(modelItem => item.Name)</div>
                                    <span class="text-muted x-small">ID: #@item.RestaurantId</span>
                                </td>
                                <td>
                                    <div class="d-flex flex-column small">
                                        <span><i class="bi bi-telephone me-2 text-secondary"></i>@Html.DisplayFor(modelItem => item.Phone)</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="small">
                                        <div class="fw-medium">@Html.DisplayFor(modelItem => item.AddressLine)</div>
                                        <div class="text-muted"><i class="bi bi-building me-1"></i> @Html.DisplayFor(modelItem => item.City)</div>
                                    </div>
                                </td>
                                <td class="text-center">
                                    @if (item.IsOpen)
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 px-3 py-2">
                                            <span class="spinner-grow spinner-grow-sm me-1" role="status" style="width: 8px; height: 8px;"></span>
                                            Deschis
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary border-opacity-25 px-3 py-2">
                                            Închis
                                        </span>
                                    }
                                </td>
                                <td class="pe-4 text-end">
                                    <div class="btn-group shadow-sm" role="group">
                                        <a asp-page="./Details" asp-route-id="@item.RestaurantId" class="btn btn-sm btn-outline-secondary" title="Detalii">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <a asp-page="./Edit" asp-route-id="@item.RestaurantId" class="btn btn-sm btn-outline-primary" title="Editează">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-page="./Delete" asp-route-id="@item.RestaurantId" class="btn btn-sm btn-outline-danger" title="Șterge">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f9fbfd;
    }

    .x-small {
        font-size: 0.7rem;
    }

    .table thead th {
        letter-spacing: 0.05rem;
        font-weight: 700;
    }
    /* Efect de hover pe rânduri */
    .table-hover tbody tr:hover {
        background-color: rgba(13, 110, 253, 0.02) !important;
    }
    /* Stil pentru butoanele de acțiune */
    .btn-group .btn {
        padding: 0.375rem 0.625rem;
    }

    .badge {
        font-weight: 600;
        letter-spacing: 0.02rem;
    }
</style>