@page
@model WEB.Pages.MenuItems.IndexModel

@{
    ViewData["Title"] = "Meniu Restaurante";
}

<div class="container-fluid pt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 fw-bold text-secondary mb-0">Gestionare Meniu</h1>
            <p class="text-muted">Administrează preparatele și disponibilitatea acestora în restaurante.</p>
        </div>
        @if (User.IsInRole("Admin"))
        {
            <a asp-page="Create" class="btn btn-success shadow-sm px-4">
                <i class="bi bi-plus-lg"></i> Adaugă Produs
            </a>
        }
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-muted">
                        <tr>
                            <th class="ps-4 text-uppercase small fw-bold">Restaurant</th>
                            <th class="text-uppercase small fw-bold">Produs</th>
                            <th class="text-uppercase small fw-bold text-center">Preț</th>
                            <th class="text-uppercase small fw-bold text-center">Status</th>
                            <th class="text-end pe-4 text-uppercase small fw-bold">Acțiuni</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.MenuItem)
                        {
                            <tr>
                                <td class="ps-4">
                                    <span class="fw-bold text-primary">@Html.DisplayFor(modelItem => item.Restaurant.Name)</span>
                                </td>
                                <td>
                                    <span class="fw-semibold">@Html.DisplayFor(modelItem => item.Name)</span>
                                </td>
                                <td class="text-center">
                                    <span class="text-dark fw-bold">@item.Price.ToString("C2")</span>
                                </td>
                                <td class="text-center">
                                    @if (item.IsAvailable)
                                    {
                                        <span class="badge rounded-pill bg-success-subtle text-success border border-success">
                                            Disponibil
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge rounded-pill bg-danger-subtle text-danger border border-danger">
                                            Indisponibil
                                        </span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group shadow-sm" role="group">
                                        <a asp-page="./Details" asp-route-id="@item.MenuItemId" class="btn btn-sm btn-outline-primary" title="Editează">
                                            Details
                                        </a>

                                        @if (User.IsInRole("Admin"))
                                        {
                                            <a asp-page="./Edit" asp-route-id="@item.MenuItemId" class="btn btn-sm btn-outline-primary" title="Editează">
                                                Edit
                                            </a>
                                            <a asp-page="./Delete" asp-route-id="@item.MenuItemId" class="btn btn-sm btn-outline-primary" title="Editează">
                                                Delete
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f4f7f6;
    }
    /* Stil pentru Badge-uri personalizate (Bootstrap 5) */
    .bg-success-subtle {
        background-color: #d1e7dd !important;
    }

    .bg-danger-subtle {
        background-color: #f8d7da !important;
    }

    .table thead th {
        border-top: none;
        letter-spacing: 0.05rem;
    }

    .table tbody tr:last-child td {
        border-bottom: none;
    }

    .btn-group .btn {
        margin-left: 2px;
    }
</style>